<div id="status-messages">
    <tal:statusmsg 
            tal:repeat="message view/messages">
        <dl class="portalMessage info"
            tal:define="mtype message/type | nothing;"
            tal:attributes="class string:portalMessage ${mtype};"
            tal:condition="message/message | nothing">
            <dt class="close-box"
                tal:content="python:'[X] %s' % mtype.capitalize()"
                tal:define="mid message/timestamp;
                            gid message/group;"
                tal:attributes="mid mid;
                                onclick string:close_sticky_message('${mid}','${gid}');"
                i18n:translate="">
                Info
            </dt>
            <dd> 
                <tal:message content="message/message | nothing" i18n:translate="">
                    The status message.
                </tal:message>
                &nbsp;
                <a  href="" 
                    tal:content="message/obj_title" 
                    tal:attributes="href message/obj_url">
                    Object Title
                </a>
            </dd>
        </dl>
    </tal:statusmsg>
</div>
